<div class="container">

<div class="card-clear">
  <h1>Hey Tiger, Come Here Often? <i class="far fa-kiss-wink-heart"></i></h1>
</div>
<br>

<div class="card-grid">
  <% @tuxes.each do |tux| %>
    <%= link_to tux_path(tux) do %>
     <div class="card">
      <% if tux.photo.attached? %>
      <%= cl_image_tag tux.photo.key, style: "border-radius: 50%; height: 200px; width: 200px; margin: 10px 20px; object-fit: cover; box-shadow: 0 10px 20px 0 $blush;" %>
      <% end %>
       <h1><%= tux.name %></h1>
       <p class="price">â‚¬<%= tux.price %>0</p>
      <p><%= tux.description.truncate(120)%></p>
      <p><button>Book Now</button></p>
     </div>
    <%end %>
  <% end %>
</div>
</div>






