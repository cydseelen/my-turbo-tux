<div class="container">
  <div class="row">
    <div class="col">
      <% if @tux.photo.attached? %>
      <%= cl_image_tag @tux.photo.key, height: 600, width: 400, crop: :fill, style: "border-radius: 10%; box-shadow: 0 0 300px 0 rgb(191,0,0);" %>
      <% end %>
      <%= image_tag 'model1.jpg', style: "border-radius: 10%; box-shadow: 0 0 300px 0 rgb(191,0,0); height: 450px; width: 400px;"%>
      <br>
      <br>
      <% if @tux.user == current_user %>
      <%= link_to "Delete #{@tux.name}",
      tux_path(@tux), class: "btn btn-outline-danger btn-sm",
      method: :delete,
      data: { confirm: "Are you sure" } %>
      <% end %>

      <% if @tux.user == current_user %>
      <%= link_to "Update #{@tux.name}",
      edit_tux_path(@tux), class: "btn btn-outline-danger btn-sm"
      %>
      <% end %>
    </div>

    <div class="col">
      <h2><%= @tux.name %></h2>
      <h2>€<%= @tux.price %>0 </h2>
      <h3><%= @tux.description %></h3>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

      <span class="fa fa-star checked"></span>
      <span class="fa fa-star checked"></span>
      <span class="fa fa-star checked"></span>
      <span class="fa fa-star"></span>
      <span class="fa fa-star"></span>
      <br>


      <br>
      <%= simple_form_for [@tux, @booking] do |f| %>
      <%= f.input :date_rented, label: "Rental Date" %>
      <%= f.input :date_returned, label: "Return Date" %>
      <%= f.button :submit, class: "btn btn-danger btn-lg" %>
      <input type="checkbox"> Add Fabio +€199
      <% end %>
      <br>
      <%= link_to 'Return to Tuxes', tuxes_path, class: "btn btn-outline-danger btn-sm" %>
    </div>
  </div>
</div>
